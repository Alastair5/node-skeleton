<section class="newForm">
  <header>
    <h2>Create New Listing</h2>
    <p id="invalid"></p>
  </header>
  <form action="/api" method="post">
    <div>
      <label for="thumbnail">Thumbnail Image</label>
      <input
        placeholder="Thumbnail Image"
        type="text"
        name="imageURL"
        id="imageURL"
      />
    </div>
    <section class="makeModel">
      <div>
        <label for="carMake">Make</label>
        <select name="make" id="make">
          <option value="">Select a Make</option>
          <option name="Honda" value="Honda">Honda</option>
        </select>
      </div>
      <div>
        <label for="carMake">Model</label>
        <select name="model" id="model">
          <option value="" data-tag="">Select a Model</option>
          <option name="Civic" value="Civic" data-tag="Honda">Civic</option>
        </select>
      </div>
      <div>
        <label for="transmission">Transmission</label>
        <select name="transmission" id="transmission">
          <option value="">Select an Option</option>
          <option value="False">Automatic</option>
          <option value="True">Manual</option>
        </select>
      </div>
    </section>
    <section>
      <div>
        <label for="year">Year</label>
        <input type="number" name="year" placeholder="Year" id="year" />
      </div>
    </section>
    <div>
      <label for="price">Price</label>
      <input type="number" name="price" placeholder="Price" id="price" />
    </div>
    <div>
      <label for="color">Color</label>
      <input type="text" name="color" placeholder="Color" id="color" />
    </div>
    <div>
      <textarea
        placeholder="Description"
        name="descriptions"
        id="descriptions"
        cols="60"
        rows="5"
      ></textarea>
    </div>
    <div>
      <button type="submit">Create</button>
      <a id="property-form__cancel" href="#">Cancel</a>
    </div>
  </form>
</section>
